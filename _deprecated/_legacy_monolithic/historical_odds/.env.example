# Historical Odds System - Environment Variables Template
# Copy this to ../.env and fill in your actual credentials

# =============================================================================
# RACING API
# =============================================================================
RACING_API_USERNAME=your_racing_api_username
RACING_API_PASSWORD=your_racing_api_password

# =============================================================================
# SUPABASE DATABASE
# =============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_service_role_key
SUPABASE_ANON_KEY=your_anon_key

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=8081  # Monitor server port (default: 8081, Render.com uses $PORT)

# =============================================================================
# SCHEDULER SETTINGS (Optional)
# =============================================================================
RUN_ON_STARTUP=false  # Set to true to run fetch on scheduler startup
TIMEZONE=Europe/London  # Default timezone for scheduler

# =============================================================================
# PERFORMANCE TUNING (Optional)
# =============================================================================
RATE_LIMIT_DELAY=0.3  # Seconds between API calls
MAX_RETRIES=3  # Number of retries for failed API calls
BATCH_SIZE=100  # Records per batch insertion

# =============================================================================
# NOTIFICATIONS (Optional - for future implementation)
# =============================================================================
# NOTIFICATION_EMAIL=your_email@example.com
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_smtp_user
# SMTP_PASSWORD=your_smtp_password